<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alertdialog_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertDialogTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="25dp"
                android:text="确定支付"
                android:textColor="#429c4e"
                android:textSize="15dp" />


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/payAlertdialogSuccess"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_left_bottom_corners_radius_10"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="是"
                    android:textColor="#429c4e"
                    android:textSize="13dp"></TextView>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/payAlertdialogError"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_right_bottom_corners_radius_10"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="否"
                    android:textColor="#429c4e"
                    android:textSize="13dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>