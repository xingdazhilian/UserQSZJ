<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdialog_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alertDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="未能获取到您的定位信息!"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertdialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:lineSpacingExtra="2dp"
        android:text="\t\t请确定您是否已经打开定位。或者您是否已经允许本程序获得定位权限，并且请您保持您手机的信号通畅！"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payAlertdialogSuccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_left_bottom_corners_radius_10"
            android:gravity="center"
            android:padding="15dp"
            android:text="确定"
            android:textColor="#429c4e"
            android:textSize="13sp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/payAlertdialogError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_right_bottom_corners_radius_10"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消"
            android:textColor="#429c4e"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>