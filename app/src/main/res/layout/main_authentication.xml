<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/page_return"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/page_return_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="实名认证"
                android:textColor="#333333"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center">


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="真实姓名："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_corners_white_gray_radius_5"
                            android:gravity="right"
                            android:hint="上传身份证后自动生成"
                            android:padding="7dp"
                            android:textColor="#666666"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#cccccc" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="证件号："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_corners_white_gray_radius_5"
                            android:gravity="right"
                            android:hint="上传身份证后自动生成"
                            android:padding="7dp"
                            android:textColor="#666666"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#cccccc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="家庭住址:"
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/user_address"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_corners_white_gray_radius_5"
                            android:gravity="right"
                            android:hint="上传身份证后自动生成"
                            android:padding="7dp"
                            android:textColor="#666666"
                            android:textSize="10dp" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#cccccc" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="证件照片："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="120dp"
                                android:background="@drawable/button_corners_white_gray_radius_5"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+"
                                    android:textColor="#666666"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="身份证正面照片"
                                    android:textColor="#666666"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_card_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/user_card_1_img"
                                android:layout_width="200dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="120dp"
                                android:background="@drawable/button_corners_white_gray_radius_5"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+"
                                    android:textColor="#666666"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="身份证反面照片"
                                    android:textColor="#666666"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_card_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/user_card_2_img"
                                android:layout_width="200dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_corners_green_radius_20"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="提交审核"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/shadow_bottom_layout" />
    </FrameLayout>
</RelativeLayout>